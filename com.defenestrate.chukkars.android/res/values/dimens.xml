    <dimen name="list_item_padding_top">13dp</dimen>
    <!-- Padding for list item left -->
    <dimen name="list_item_padding_left">16dp</dimen>
    <!-- Padding for list item bottom -->
    <dimen name="list_item_padding_bottom">13dp</dimen>
    <!-- Padding for overall list item right -->
    <dimen name="list_item_padding_right">16dp</dimen>
    
    <!-- Padding for radio grid list item bottom -->
    <dimen name="list_item_radio_grid_padding_bottom">4dp</dimen>
    
    <!-- Padding for a ListView's default divider. Only affects left and right -->
    <dimen name="list_divider_padding">16dp</dimen>
    
