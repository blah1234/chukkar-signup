<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal"
                android:id="@+id/add_dialog_root"
              	android:layout_width="match_parent"
              	android:layout_height="wrap_content">
    
    <LinearLayout android:id="@+id/name_root"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="3"
              android:padding="10dp">
	    <TextView android:id="@+id/name_label"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="Name:"/>
	    <EditText android:id="@+id/name_edit" 
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:ellipsize="end"
				  android:scrollHorizontally="true"
				  android:singleLine="true"/>
    </LinearLayout>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              android:padding="10dp">
	    <TextView android:id="@+id/chukkars_label"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="Chukkars:"/>
	    <com.defenestrate.chukkars.android.widget.NumberPicker android:id="@+id/chukkars_picker"
	    		  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"/>
	</LinearLayout>
    
</LinearLayout>