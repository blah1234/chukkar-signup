<?xml version="1.0" encoding="UTF-8"?>
<cronentries>

  <!-- South Bay -->   
  <cron>
    <url>/signup/cron/removeAllPlayers</url>
    <description>Resets the signup page every Monday at 7pm</description>
    <schedule>every monday 19:00</schedule>
    <timezone>America/Los_Angeles</timezone>
  </cron>
  
  <cron>
    <url>/signup/cron/sendSignupNoticeEmail</url>
    <description>Sends a weekly email reminding players to signup for chukkars</description>
    <schedule>every tuesday 09:00</schedule>
    <timezone>America/Los_Angeles</timezone>
  </cron>
  
  <cron>
    <url>/signup/cron/sendSignupReminderEmail</url>
    <description>Sends a weekly last reminder to players to signup for chukkars</description>
    <schedule>every day 09:00</schedule>
    <timezone>America/Los_Angeles</timezone>
  </cron>
  
  <cron>
    <url>/signup/cron/sendExportSignupEmail</url>
    <description>Sends a weekly export of the player signups to the club manager</description>
    <schedule>every day 17:30</schedule>
    <timezone>America/Los_Angeles</timezone>
  </cron>
  
</cronentries>