<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal"
                android:id="@+id/edit_chukkars_dialog_root"
              	android:layout_width="match_parent"
              	android:layout_height="match_parent">
    
    <LinearLayout android:id="@+id/name_root"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="3"
              android:padding="10dp">
	    <TextView android:id="@+id/name_label"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="Name:"/>
	    <TextView android:id="@+id/name_value" 
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:textSize="20sp"/>
    </LinearLayout>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:padding="10dp">
	    <TextView android:id="@+id/chukkars_label"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="Chukkars:"/>
	    <com.defenestrate.chukkars.android.widget.NumberPicker android:id="@+id/chukkars_picker"
	    		  android:layout_width="match_parent"
				  android:layout_height="wrap_content"/>
	</LinearLayout>
    
</LinearLayout>